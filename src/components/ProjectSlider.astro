---
const { project } = Astro.props;
---

<div class="project-slider">
    <div class="project-title-wrapper">
        <div class="swiper-button-prev-parent"></div>
        <h2 class="project-title"><a href={project.setup.url} target="_blank" >{project.setup.name}</a></h2>
        <div class="swiper-button-next-parent"></div>
    </div>
    <div set:html={project.setup.description}></div>
    <div class="swiper-container child-slider">
        <div class="swiper-wrapper">
        {project.mediaItems.map((item, index) => (
            <div class="swiper-slide" key={index}>
            <div class="swiper-button-prev-child"></div>
            
            {item.type === 'video' ? (
                <video
                width="100%"
                height="100%"
                controls
                poster={item.poster}
                src={item.src}
                ></video>
            ) : (
                <img src={item.src}/>
            )}

            <div class="swiper-button-next-child"></div>
            </div>
        ))}
    </div>
    <div class="swiper-pagination swiper-pagination-child"></div>
  </div>
</div>
